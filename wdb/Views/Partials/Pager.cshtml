@model Articulate.Models.PagerModel

@if (Model.HasNext || Model.HasPrevious)
{
    <ul class="pager">
        <li><span class="page-number">Page @(Model.CurrentPageIndex + 1) of @Model.TotalPages</span></li>

        @if (Model.HasPrevious)
        {
           <li class="previous"> <a class="newer-posts" href="@Model.PreviousUrl">
                <i class="fa fa-chevron-circle-left"></i> Newer
            </a></li>
        }
        
        @if (Model.HasNext)
        {
            <li class="previous"><a class="older-posts" href="@Model.NextUrl">
                Older <i class="fa fa-chevron-circle-right"></i>
            </a></li>
        }
    </ul>
}


